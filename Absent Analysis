#display(df)
#df.info()

columns=df.columns
print("Starting automation correlation for every column:")
for c in columns:
    corr=round(df[c].corr(df['Absenteeism Time in Hours']),4)
    print(corr, " for ", c)
print("Finished automation correlation for every column.")
