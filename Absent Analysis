import pandas as pd

file=r'C:\Users\sschm\Desktop\dataAnalyst\df-cleaned.csv'
df=pd.read_csv(file) 
#print(type(df)) #<class 'pandas.core.frame.DataFrame'>
#print(df.columns)
'''
