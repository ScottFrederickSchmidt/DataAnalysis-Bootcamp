'''
Pandas Dataframes: Data Selection
'''
import pandas as pd
file= r'C:\Users\13098\Desktop\Lending-Company.csv'
lend_data=pd.read_csv(file, index_col='StringID', squeeze=True) #squeeze changes dataframe to series
#print(lend_data)
cols=lend_data.columns #grabs columns
ind=lend_data.index #grabs indexes
axes=lend_data.axes #grabs axes
lend_numpy=lend_data.to_numpy() #changes to numpy
shape=lend_data.shape # gets length of data
length=len(cols) #how many columns?
prod_loc=lend_data[['Location', 'Product']] #grabs location and product only

'''
.iloc grabs data by INDEX number (remeber i=index)
.loc grabs data by name (like 'name' or 'location')
'''
firstIloc=lend_data.iloc[0] #grabs first loan row
secIloc=lend_data.iloc[1] #grabs second loan row
testNum=lend_data.iloc[1, 2] #grabs row 1 column 2 
location=lend_data.loc[:,'Location'] #grabs Location column
product=lend_data.loc[:, 'Product'] # see above
location1=lend_data.loc['LoanID_1']['Location'] #grabs Loan1 within Location column
